# Environment variables declared in this file are available at build time and runtime.
# Copy this file to .env and fill in your actual values.

# Environment
NODE_ENV="development" # development | production | test

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/pipe_supply_db?schema=public"
DATABASE_POOL_SIZE="10"
DATABASE_CONNECTION_TIMEOUT="10000"

# NextAuth.js
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here" # Generate with: openssl rand -base64 32
NEXTAUTH_URL_INTERNAL="http://localhost:3000" # For internal container communication

# Data Encryption (Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
ENCRYPTION_KEY="your-64-character-hex-encryption-key-here"

# Security
TRUSTED_ORIGINS="http://localhost:3000,https://yourdomain.com"
RATE_LIMIT_MAX="100" # Max requests per window
RATE_LIMIT_WINDOW="900000" # Window in milliseconds (15 minutes)

# Backup Configuration
BACKUP_DIR="./backups"
BACKUP_RETENTION_DAYS="30"
BACKUP_COMPRESSION="true"
BACKUP_ENCRYPTION="false"

# Monitoring & Health Checks
HEALTH_CHECK_ENABLED="true"
HEALTH_CHECK_PATH="/api/health"

# Logging
LOG_LEVEL="info" # error | warn | info | debug
LOG_FORMAT="json" # json | pretty

# Performance
CACHE_ENABLED="true"
CACHE_TTL="300000" # 5 minutes in milliseconds

# Image Optimization
IMAGE_DOMAINS="localhost,yourdomain.com"
IMAGE_QUALITY="75"

# Production Settings (uncomment for production)
# NODE_ENV="production"
# NEXTAUTH_URL="https://yourdomain.com"
# DATABASE_URL="postgresql://user:pass@prod-host:5432/pipe_supply_db?schema=public&connection_limit=20&pool_timeout=10"
# LOG_LEVEL="warn"
# CACHE_TTL="600000"